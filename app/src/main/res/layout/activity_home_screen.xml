<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cisc.crossfitworkoutgenerator.HomeScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Workout"
        android:id="@+id/generate_workout"
        android:layout_above="@+id/send_feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/options_menu"
        android:layout_below="@+id/gallery_button"
        android:layout_alignLeft="@+id/gallery_button"
        android:layout_alignStart="@+id/gallery_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/gallery_button"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_above="@+id/send_feedback"
        android:layout_toRightOf="@+id/generate_workout"
        android:layout_toEndOf="@+id/generate_workout" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/imageView"
        android:src="@drawable/homescreenpic"
        android:layout_above="@+id/generate_workout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Issues"
        android:id="@+id/send_feedback"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
